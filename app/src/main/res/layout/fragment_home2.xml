<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.bottom_navigation_bar.fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find Your Best Hotel"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="80dp"
                    android:textSize="26sp"/>

                <EditText
                    android:id="@+id/searchHotel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="95dp"
                    android:layout_marginTop="60dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Hotel" />

            </RelativeLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="4"
                android:alignmentMode="alignMargins">
                <androidx.cardview.widget.CardView
                    app:cardElevation="6dp"
                    android:layout_columnWeight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/fjayakartaHotelHome"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp" android:src="@drawable/jayakarta"
                            android:text="" />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="120dp"
                            android:src="@drawable/star5"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="40dp"
                            android:text="Jayakarta Bandung Hotel"
                            android:textColor="#FF0000"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80dp"
                            android:text="West Java,Bandung"
                            android:textColor="#FF0000"
                            android:textSize="15sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="6dp"
                    android:layout_columnWeight="1">

                    <LinearLayout
                        android:padding="16dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        >
                        <ImageView
                            android:layout_marginTop="30dp"
                            android:id="@+id/fjayakartaHoteljkt"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"
                            android:src="@drawable/jayakartajkt"
                            />
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="90dp"
                            android:src="@drawable/star5"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="43dp"
                            android:text="Jayakarta Jakarta Hotel"
                            android:textColor="#FF0000"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="80dp"
                            android:text="Jakarta,Kemang"
                            android:textColor="#FF0000"
                            android:textSize="15sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </GridLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>